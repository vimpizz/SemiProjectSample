<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imgProfile"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/chr"
        android:layout_margin="30dp"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/txtMemId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/txtMemName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textSize="15dp"
/>

    <TextView
        android:id="@+id/txtMemPw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/txtMemDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textSize="15dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_margin="20dp"
        >

        <Button
            android:id="@+id/btnModifyPw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="비밀번호 변경"
            android:layout_gravity="center"
            android:background="#F3D97D"
            android:textColor="#0C0C0C"
            android:layout_margin="20dp"
            android:padding="10dp"/>

        <Button
            android:id="@+id/btnModifyMember"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="사진 교체하기"
            android:layout_gravity="center"
            android:background="#F3D97D"
            android:textColor="#0C0C0C"
            android:padding="10dp"
            android:layout_margin="20dp"/>
    </LinearLayout>


</LinearLayout>